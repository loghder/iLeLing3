<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/Topbar_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_topbar_bg_color="@color/modPink"
        app:qmui_topbar_text_btn_color_state_list="@android:color/white"
        app:qmui_topbar_title_color="@android:color/white"></com.qmuiteam.qmui.widget.QMUITopBar>

    <com.jbvincey.nestedradiobutton.NestedConstraintRadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:checkedButton="@+id/radioButton2"
        app:layout_constraintTop_toBottomOf="@+id/Topbar_guide">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:elevation="@dimen/card_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="LOLLIPOP">

            <com.jbvincey.nestedradiobutton.NestedRadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:clickableParent="@id/l1"
                app:layout_constraintBottom_toBottomOf="@id/picture1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/picture1"
                app:layout_constraintTop_toTopOf="@id/picture1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture1"
                android:layout_width="@dimen/picture_size"
                android:layout_height="@dimen/picture_size"
                android:layout_marginTop="@dimen/content_margin"
                android:src="@drawable/l1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_margin"
                android:ellipsize="end"
                android:text="备孕中"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picture1" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:elevation="@dimen/card_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/l1"
            tools:targetApi="LOLLIPOP">

            <com.jbvincey.nestedradiobutton.NestedRadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:clickableParent="@id/l2"
                app:layout_constraintBottom_toBottomOf="@id/picture2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/picture2"
                app:layout_constraintTop_toTopOf="@id/picture2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture2"
                android:layout_width="@dimen/picture_size"
                android:layout_height="@dimen/picture_size"
                android:layout_marginTop="@dimen/content_margin"
                android:src="@drawable/l2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_margin"
                android:ellipsize="end"
                android:text="怀孕中"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picture2" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:elevation="@dimen/card_elevation"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l1"
            tools:targetApi="LOLLIPOP">

            <com.jbvincey.nestedradiobutton.NestedRadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:clickableParent="@id/l3"
                app:layout_constraintBottom_toBottomOf="@id/picture3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/picture3"
                app:layout_constraintTop_toTopOf="@id/picture3" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture3"
                android:layout_width="@dimen/picture_size"
                android:layout_height="@dimen/picture_size"
                android:layout_marginTop="@dimen/content_margin"
                android:src="@drawable/l3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_margin"
                android:ellipsize="end"
                android:text="宝宝已出生"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picture3" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="   "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l3" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </com.jbvincey.nestedradiobutton.NestedConstraintRadioGroup>


</android.support.constraint.ConstraintLayout>